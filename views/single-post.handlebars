<div class="post">
    <article class="card">
        <div class="card-header flex-row justify-space-between">
            <h2>{{title}}</h2>
            <div>
                Posted by {{user.username}} on {{format_date createdAt}}
            </div>
        </div>
        <div class="card-body" style="white-space:pre-line">
            {{post.body}}
        </div>
    </article>

    {{#if post.Comments}}
    <section class="card">
        <div class="card-header">
            <h3>Comments</h3>
        </div>

        <div class="card-body">
            {{#each post.Comments}}
            <div>
                <p style="white-space:pre-line">
                    {{body}}
                </p>
                <p>
                    {{user.username}}, {{format_date createdAt}}
                </p>
            </div>
            {{#each}}
        </div>
    </section>
    {{/if}}

    <form id="new-comment-form" class="card">
        <div class="card-header">
            <h3>Add New Comment</h3>
        </div>

        <div class="card-body">
            <input type="hidden" name="post-id" value="{{post-id}}" />
            <label class="form-label" for="comment-body">Comment</label>
            <textarea name="comment-body" class="form-input"></textarea>
            <button type="submit" class="btn">Submit</button>
        </div>
    </form>
</div>
<script src="/scripts/comment.js"></script>