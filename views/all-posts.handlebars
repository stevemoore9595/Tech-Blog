<div class="posts">
    {{#each posts}}
    <article class="card">
        <div class="card-header flex-row justify-space-between">
            <h2>
                <a href="/post/{{id}}">{{title}}</a>
            </h2>
            <div>
                Posted by {{user.username}} on {{format_date createdAt}}
            </div>
        </div>

        <div class="card-body" style="white-space:pre-line">
            {{body}}
        </div>
    </article>
    {{/each}}
</div>