<div>
    <form class="row justify-content-center mb-3 mt-4 form-signup" id="signup-form">
        <div class="bg-secondary rounded-3" style="width:500px; height:340px">
            <h2 class="mt-3">Signup</h2>
            <div class="mb-3">
                <label for="username-signup">Username:</label>
                <input class="form-control" type="username" placeholder="Create username" id="username-signup"
                    name="username" />
            </div>
            <div class="mb-3">
                <label>Password:</label>
                <input class="form-control" type="password" placeholder="Create password" id="password-signup"
                    name="password" />
            </div>
            <div class="mb-1">
                <button class="btn btn-primary btn-submit" id="signup-btn" type="submit">Signup</button>
            </div>
        </div>
    </form>
</div>
<script src="/scripts/signup.js"></script>



